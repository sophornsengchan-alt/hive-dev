<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
   <targets>
       <target>lightning__FlowScreen</target>
        <target>lightning__RecordPage</target>
   </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            
            <property name="isStandardVIP" type="Boolean" label="Is Standard VIP?" description="Default False."></property>
            <property name="isEmptyInclusionCategory" type="Boolean" label="Is Pricing with Empty Inclusion Category?" description="Default False."></property>
            <propertyType name="Category_Tree__c" extends="SObject" label="Category_Tree__c" description="Category_Tree__c" />        
            <property name="DefaultExclusionCategory" type="{Category_Tree__c[]}" label="Default Exclusion Category"></property>
            <propertyType name="Contract_Category__c" extends="SObject" label="Contract_Category__c" description="Contract_Category__c" />        
            <property name="contractCategory2create" type="{Contract_Category__c[]}" label="Contract Category To Create"></property>
            <property name="contractCategory2delete" type="{Contract_Category__c[]}" label="Contract Category To Delete"></property>
            <property name="errorPricingId" label="Pricing With Error" type="String[]"/>
            <property name="isEdit" type="Boolean" label="Edit Mode" description="Default False. False is New, True is Edit."></property>
            <property name="mode" type="Integer" label="Mode" description="1= Path"></property>
            <property name="currentStep" type="Integer" label="Current Step" description="For Mode=1. It is an Active Step Index (ex: 1, 2, 3 etc..)"></property>
            <propertyType name="EBH_Pricing__c" extends="SObject" label="EBH_Pricing__c" description="EBH_Pricing__c" />        
            <property name="pricingData" type="{EBH_Pricing__c[]}" label="pricingData"></property>
            <propertyType name="EBH_ContractPricingMatrix__c" extends="SObject" label="EBH_ContractPricingMatrix__c" description="EBH_ContractPricingMatrix__c" />        
            <property name="contractPricingMatrixData" type="{EBH_ContractPricingMatrix__c[]}" label="contractPricingMatrixData"></property>
            <propertyType name="FeeType__c" extends="SObject" label="FeeType__c" description="FeeType__c" />        
            <property name="typeFeeData" type="{FeeType__c[]}" label="typeFeeData"></property>       
            <property name="contractData" type="@salesforce/schema/Contract" label="contractData"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>