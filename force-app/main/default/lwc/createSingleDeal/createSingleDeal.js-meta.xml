<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>        
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">            
            <property name="recordId" type="String" label="Record ID" description="The value should be {!recordId}." /> 
            <property name="isCloned" type="String" label="Is Cloned" description="The value should be {!isCloned}." />  
            <property label="Title" name="title" type="String" default="Create a new deal"/>   
            <property label="Label Submit button" name="labelSubmitBtn" type="String" default="Submit Deal"/>            
            <property label="Label Cancel button" name="labelCancelBtn" type="String" default="Cancel"/>
            <property label="Successful Message" name="successMessage" type="String" default="Your deal has been successfully created."/>        
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>