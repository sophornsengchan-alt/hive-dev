<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage, lightning__AppPage, lightning__HomePage">
            <property name="tableHeaderTitle" type="String" label="Table Header Title" default="Data Table" required="true"/>
            <property name="headerIcon" type="String" label="Table Header Icon" default="standard:table"/>
            <property name="tableHeight" type="String" label="Table Max Height in rem" default="15" required="true"/>
            <property name="objectApiName" type="String" label="Object API Name" default="Task" required="true"/>
            <property name="fieldSetName" type="String" label="Field Set Name" default="My_Planned_Call" required="true"/>

            <property name="recordOwnerField" type="String" label="Record OwnerField" default="OwnerId" description="Field use to query record related to current user" required="true"/>
            <property name="sortBy" type="String" label="Sort By String" description="Example: ORDER BY BillingPostalCode ASC NULLS LAST" default="Id" required="true"/>
            <property name="dateFilterField" type="String" label="Date Filter Field" default=""/>

            <property name="filterByToday" type="Boolean" label="Filter By Today" default="false" description="Filter by Today"/>
            <property name="filterByNext7Days" type="Boolean" label="Filter By Next 7Days" default="false"/>
            <property name="recordLimit" type="Integer" label="Record Limit" default="5" required="true"/>
            <property name="showPagination" type="Boolean" label="Show Pagination" default="false"/>
            <property name="additionalClause" type="String" label="Additional Clause" default=" " description="Addtional Caluse. Example: WHERE Status != null "/>
            <property name="noRecordMessage" type="String" label="No Record Message" default="No results found"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>